{
  "name": "typescript-linters-template",
  "version": "1.0.0",
  "description": "a simple typescript, prettier and eslint template",
  "main": "index.ts",
  "type": "commonjs",
  "scripts": {
    "clean": "rimraf dist/",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css dist/",
    "build": "yarn clean && tsc && yarn copy-files",
    "start": "live-server --open=dist/"
  },
  "author": "Jhon Cordoba",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "live-server": "^1.2.1",
    "morgan": "^1.10.0",
    "prettier": "2.4.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3"
  }
}
